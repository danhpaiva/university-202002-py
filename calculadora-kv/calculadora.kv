<CustButton@Button>:
    font_size: 32
 

<CalcGridLayout>:
    id: calculadora
    display: entry
    rows: 5
    padding: 10
    spacing: 10
 

    BoxLayout:
        spacing: 10
        TextInput:
            id: entry
            font_size: 32
            multiline: False
           
            
        CustButton:
            text: "AC"
            on_press: entry.text = ""
    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "/"
            on_press: entry.text += self.text
        
        
    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            on_press: entry.text += self.text
 
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            on_press: entry.text += self.text
 
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "="
            on_press: calculadora.calcular(entry.text)
        CustButton:
            text: "+"
            on_press: entry.text += self.text
       
        
        